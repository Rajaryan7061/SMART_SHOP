<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopFragment"
    android:background="#ffffff"
    android:gravity="center"
    android:id="@+id/shop_fragment"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/shop_design_canva"/>

            <TextView

                android:textSize="20dp"
                android:clickable="true"
                android:text="Create shop"
                android:layout_marginTop="40dp"
                android:id="@+id/et_shp_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="bold" />

            <TextView
                android:textSize="20dp"
                android:clickable="true"
                android:background="@drawable/round"
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint=" Setting"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="bold"

                />

            <TextView
                android:clickable="true"
                android:textSize="20dp"
                android:id="@+id/tv_profile_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:hint=" Profile"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                android:background="@drawable/round"/>

            <TextView
                android:clickable="true"
                android:background="@drawable/round"
                android:id="@+id/tv_phone_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:text="Sign up"
                android:textSize="20dp"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="bold" />

            <Button

                android:background="@drawable/round"
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/Log_in"
                android:padding="15dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                />
            <EditText
                android:clickable="true"
                android:background="@drawable/round"
                android:id="@+id/et_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:text="Help"
                android:padding="15dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="bold" />




        </LinearLayout>
    </ScrollView>


</RelativeLayout>


